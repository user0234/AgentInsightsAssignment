<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text_rounded" parent="@style/Widget.Material3.TextInputEditText.FilledBox">
        <item name="strokeWidth">5dp</item>
        <item name="shapeAppearanceOverlay">@style/rounded_shape_overlay</item>
        <item name="android:paddingStart" >0dp</item>
        <item name="android:paddingEnd" >0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <!-- Edit text's default text size is 16sp which currently equals to 22dp total line height, so
             we need a total of 34dp to get the 56dp height of the default layout. -->
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="rounded_shape_overlay" parent="" >
        <item name="cornerSize">50%</item>
    </style>

</resources>